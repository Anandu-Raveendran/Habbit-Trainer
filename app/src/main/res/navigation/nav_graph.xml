<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HobbyListFragment">

    <fragment
        android:id="@+id/HobbyListFragment"
        android:name="com.example.habbittrainer.HobbyListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <argument
            android:name="hobby"
            app:argType="com.example.habbittrainer.models.Hobby"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="edit_index"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_FirstFragment_to_runFragment"
            app:destination="@id/runFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.habbittrainer.EditFragment"
        android:label="edit_fragment"
        tools:layout="@layout/edit_fragment" >
        <action
            android:id="@+id/action_editFragment_to_FirstFragment"
            app:destination="@id/HobbyListFragment" />
        <argument
            android:name="hobby"
            app:argType="com.example.habbittrainer.models.Hobby"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="edit_index"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_editFragment_to_runFragment"
            app:destination="@id/runFragment" />
    </fragment>
    <fragment
        android:id="@+id/runFragment"
        android:name="com.example.habbittrainer.RunFragment"
        android:label="fragment_run"
        tools:layout="@layout/fragment_run" >
        <argument
            android:name="hobby"
            app:argType="com.example.habbittrainer.models.Hobby"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>